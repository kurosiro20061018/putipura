<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="genre_search">
        <table class="table">
          <tr>
            <th>ジャンル検索</th>
          </tr>
          <% genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, eval("#{role}_genre_search_path(genre_id: genre.id)"), method: :get %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="col-md-9">
      <h1><%= title %></h1>
      <div class="row">
        <% items.each do |item| %>
          <div class="col-md-4 col-sm-6">
            <%= link_to eval("#{role}_item_path(item)") do %>
              <%= image_tag item.image, style: "width:100%;" if item.image.attached? %>
              <p><%= item.name %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>