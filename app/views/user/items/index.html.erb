<div class="genre_search">
  <table class="table">
    <tr>
      <th>ジャンル検索</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, user_genre_search_path(genre_id: genre.id), method: :get %></td>
      </tr>
    <% end %>
  </table>
</div>

<h1>アイテム一覧</h1>
<div class="main-content col-5">
  <div class="row row-cols-3 p-3">
    <div class="col p-3">
      <div class="content">
        <% @items.each_slice(3) do |group| %>
          <div class="d-flex justify-content-between">
            <% group.each do |item| %>
              <div>
                <%= link_to user_item_path(item) do %>
                  <%= image_tag item.image, style: "width: 300px; height: 200px;" if item.image.attached? %>
                  <p><%= item.name %></p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
