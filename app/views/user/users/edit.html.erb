<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">

<%= form_with model: @user, url: user_information_path, method: :patch do |f| %>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name, value: @user.name, autofocus: true, autocomplete: "name" %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, value: @user.email, autofocus: true, autocomplete: "email" %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= f.label :age %><br />
    <%= f.select :age, (10..90).step(10), selected: @user.age, prompt: "年齢を選択してください" %>
  </div>

  <div>
    <%= f.label :skin_quality %><br />
    <%= f.select :skin_quality, ['乾燥肌', '混合肌', '脂性肌'], selected: @user.skin_quality, prompt: "肌質を選択してください" %>
  </div>

  <div>
    <%= f.label :skin_trouble %><br />
    <%= f.select :skin_trouble, ['ニキビ', 'シミ', 'シワ', '乾燥','特になし'], selected: @user.skin_trouble, prompt: "肌トラブルを選択してください" %>
  </div>

  <div>
    <%= f.submit "更新する" %>
  </div>
  <div>
    <%= link_to "マイページに戻る", user_my_page_path %>
  </div>
  <div>
    <%= link_to "退会する", user_unsubscribe_path, class: "btn btn-danger" %>
  </div>
<% end %>
    </div>
  </div>
</div>