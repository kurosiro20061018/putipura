<h1>化粧品新規登録</h1>
<%= form_with model: @item, url: admin_items_path do |f| %>
  <h4>アイテム名</h4>
  <%= f.text_field :name %>
  <h4>価格</h4>
  <%= f.text_field :price, type: "number" %>
  <h4>ジャンル</h4>
  <%= f.label :genre_id %>
  <%= f.select :genre_id, @genres, prompt: "ジャンルを選択してください" %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.submit 'アイテム追加' %>
<% end %>